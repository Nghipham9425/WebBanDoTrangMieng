<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Panel</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Admin CSS -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/admin.css" />
    @RenderSection("Styles", required: false)
</head>
<body class="bg-light">
    <div class="admin-layout">
        <!-- Sidebar -->
        <nav class="admin-sidebar d-flex flex-column" id="adminSidebar">
            <!-- Brand -->
            <div class="brand p-3 text-center border-bottom border-light border-opacity-25">
                <h4 class="text-white fw-bold m-0">
                    <i class="fas fa-cookie-bite me-2"></i>Admin Panel
                </h4>
                <small class="text-white-50">Đồ Tráng Miệng</small>
            </div>
            
            <!-- Navigation -->
            <div class="admin-nav flex-grow-1 py-3">
                <div class="px-3 mb-2">
                    <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="admin-nav-link d-flex align-items-center p-3 text-decoration-none text-white-50 rounded">
                        <i class="fas fa-tachometer-alt me-3"></i> Dashboard
                    </a>
                </div>
                <div class="px-3 mb-2">
                    <a href="@Url.Action("Index", "Product", new { area = "Admin" })" class="admin-nav-link d-flex align-items-center p-3 text-decoration-none text-white-50 rounded">
                        <i class="fas fa-box me-3"></i> Quản lý sản phẩm
                    </a>
                </div>
                <div class="px-3 mb-2">
                    <a href="@Url.Action("Index", "Order", new { area = "Admin" })" class="admin-nav-link d-flex align-items-center p-3 text-decoration-none text-white-50 rounded">
                        <i class="fas fa-shopping-cart me-3"></i> Quản lý đơn hàng
                    </a>
                </div>
                <div class="px-3 mb-2">
                    <a href="@Url.Action("Index", "User", new { area = "Admin" })" class="admin-nav-link d-flex align-items-center p-3 text-decoration-none text-white-50 rounded">
                        <i class="fas fa-users me-3"></i> Quản lý người dùng
                    </a>
                </div>
                <div class="px-3 mb-2">
                    <a href="@Url.Action("Index", "Promotion", new { area = "Admin" })" class="admin-nav-link d-flex align-items-center p-3 text-decoration-none text-white-50 rounded">
                        <i class="fas fa-gift me-3"></i> Quản lý khuyến mãi
                    </a>
                </div>
                <div class="px-3 mb-2">
                    <a href="@Url.Action("Index", "Review", new { area = "Admin" })" class="admin-nav-link d-flex align-items-center p-3 text-decoration-none text-white-50 rounded">
                        <i class="fas fa-star me-3"></i> Quản lý đánh giá
                    </a>
                </div>
                <div class="px-3 mb-2">
                    <a href="@Url.Action("Index", "Category", new { area = "Admin" })" class="admin-nav-link d-flex align-items-center p-3 text-decoration-none text-white-50 rounded">
                        <i class="fas fa-tags me-3"></i> Danh mục
                    </a>
                </div>
                <div class="px-3 mb-2">
                    <a href="@Url.Action("Index", "Inventory", new { area = "Admin" })" class="admin-nav-link d-flex align-items-center p-3 text-decoration-none text-white-50 rounded">
                        <i class="fas fa-warehouse me-3"></i> Quản lý tồn kho
                    </a>
                </div>
                <div class="px-3 mb-2">
                    <a href="@Url.Action("Index", "Report", new { area = "Admin" })" class="admin-nav-link d-flex align-items-center p-3 text-decoration-none text-white-50 rounded">
                        <i class="fas fa-chart-bar me-3"></i> Báo cáo
                    </a>
                </div>
            </div>

            <!-- Bottom Nav -->
            <div class="mt-auto p-3">
                <div class="px-3 mb-2">
                    <a href="@Url.Action("Index", "Home")" 
                       class="admin-nav-link d-flex align-items-center p-3 text-decoration-none text-white-50 rounded">
                        <i class="fas fa-external-link-alt me-3"></i>
                        Xem website
                    </a>
                </div>
                <div class="px-3">
                    <a href="#" class="admin-nav-link d-flex align-items-center p-3 text-decoration-none text-white-50 rounded">
                        <i class="fas fa-sign-out-alt me-3"></i>
                        Đăng xuất
                    </a>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="admin-content flex-fill d-flex flex-column">
            <!-- Top Navigation -->
            <nav class="admin-topbar bg-white shadow-sm sticky-top">
                <div class="container-fluid px-4 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <button class="topbar-toggle btn btn-success d-lg-none me-3" id="sidebarToggle">
                                <i class="fas fa-bars"></i>
                            </button>
                            <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" 
                               class="topbar-brand text-success text-decoration-none fw-bold fs-4 d-none d-lg-block">
                                <i class="fas fa-cookie-bite me-2"></i>Admin Panel
                            </a>
                        </div>
                        
                        <div class="d-flex align-items-center gap-3">
                            <button class="topbar-action btn position-relative" type="button" title="Thông báo">
                                <i class="fas fa-bell"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">3</span>
                            </button>
                            <button class="topbar-action btn position-relative" type="button" title="Tin nhắn">
                                <i class="fas fa-envelope"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">5</span>
                            </button>
                            <div class="dropdown">
                                <button class="topbar-action btn" type="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Hồ sơ</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Cài đặt</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt me-2"></i>Đăng xuất</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Main Content Area -->
            <div class="admin-main flex-grow-1 p-4">
                <!-- Breadcrumb -->
                <div class="admin-breadcrumb bg-white rounded p-3 mb-4 shadow-sm">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="text-decoration-none">
                                    <i class="fas fa-home me-1"></i>Dashboard
                                </a>
                            </li>
                            @if (!string.IsNullOrEmpty(ViewBag.Title?.ToString()))
                            {
                                <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                            }
                        </ol>
                    </nav>
                </div>

                <!-- Page Content -->
                <div class="admin-fade-in">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar Overlay for Mobile -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function() {
            const $sidebar = $('#adminSidebar');
            const $overlay = $('#sidebarOverlay');
            const $toggle = $('#sidebarToggle');

            // Toggle sidebar on mobile
            $toggle.on('click', function() {
                $sidebar.toggleClass('show');
                $overlay.toggleClass('show');
                $('body').toggleClass('overflow-hidden', $sidebar.hasClass('show'));
            });

            // Close sidebar when clicking overlay
            $overlay.on('click', function() {
                $sidebar.removeClass('show');
                $overlay.removeClass('show');
                $('body').removeClass('overflow-hidden');
            });

            // Set active navigation link
            const currentPath = window.location.pathname;
            $('.admin-nav-link').each(function() {
                const $this = $(this);
                if ($this.attr('href') === currentPath) {
                    $this.addClass('active bg-white bg-opacity-25 text-white');
                }
            });

            // Auto-hide sidebar overlay on window resize
            $(window).on('resize', function() {
                if ($(window).width() >= 992) {
                    $sidebar.removeClass('show');
                    $overlay.removeClass('show');
                    $('body').removeClass('overflow-hidden');
                }
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
