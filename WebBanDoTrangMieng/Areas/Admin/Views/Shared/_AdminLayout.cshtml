<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Areas/Admin/Content/admin.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="adminNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Product", new { area = "Admin" })">Quản lý sản phẩm</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Order", new { area = "Admin" })">Quản lý đơn hàng</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "User", new { area = "Admin" })">Quản lý người dùng</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">Thống kê</a></li>
                </ul>
                <span class="navbar-text">Xin chào, Admin</span>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
