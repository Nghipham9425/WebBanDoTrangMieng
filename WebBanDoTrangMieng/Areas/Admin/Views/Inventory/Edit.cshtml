@model WebBanDoTrangMieng.Product
@{
    ViewBag.Title = "Cập nhật tồn kho";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-4">
    <h2>Cập nhật tồn kho</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.ProductId)
        <div class="mb-3">
            @Html.LabelFor(m => m.Name, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.StockQuantity, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.StockQuantity, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.StockQuantity, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Lưu</button>
        <a href="@Url.Action("Index", "Inventory", new { area = "Admin" })" class="btn btn-secondary ms-2">Quay lại</a>
    }
</div>