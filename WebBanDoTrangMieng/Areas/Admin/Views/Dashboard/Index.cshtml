                    <h5>Quản lý đơn hàng</h5>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="@Url.Action("Index", "User", new { area = "Admin" })" class="admin-card card text-center">
                <div class="card-body">
                    <h5>Quản lý người dùng</h5>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="admin-card card text-center">
