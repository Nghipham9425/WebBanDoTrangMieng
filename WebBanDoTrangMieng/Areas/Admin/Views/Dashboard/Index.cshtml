@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Dashboard";
}

<div class="container-fluid">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="bg-white rounded-3 p-4 shadow-sm">
                <h2 class="text-success fw-bold mb-2">
                    <i class="fas fa-tachometer-alt me-2"></i>Bảng điều khiển
                </h2>
                <p class="text-muted mb-0">Chào mừng bạn đến với trang quản trị</p>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" 
                         style="width: 60px; height: 60px; font-size: 1.5rem;">
                        <i class="fas fa-box"></i>
                    </div>
                    <div>
                        <div class="h3 fw-bold text-dark mb-1">45</div>
                        <div class="text-muted small">Sản phẩm</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" 
                         style="width: 60px; height: 60px; font-size: 1.5rem;">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <div>
                        <div class="h3 fw-bold text-dark mb-1">12</div>
                        <div class="text-muted small">Đơn hàng</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-warning text-white rounded-circle d-flex align-items-center justify-content-center me-3" 
                         style="width: 60px; height: 60px; font-size: 1.5rem;">
                        <i class="fas fa-users"></i>
                    </div>
                    <div>
                        <div class="h3 fw-bold text-dark mb-1">8</div>
                        <div class="text-muted small">Khách hàng</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-3" 
                         style="width: 60px; height: 60px; font-size: 1.5rem;">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div>
                        <div class="h3 fw-bold text-dark mb-1">₫2.5M</div>
                        <div class="text-muted small">Doanh thu</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-4">
        <div class="col-lg-6">
            <div class="bg-white rounded-3 p-4 shadow-sm h-100">
                <h5 class="fw-bold mb-3">
                    <i class="fas fa-rocket me-2 text-success"></i>Thao tác nhanh
                </h5>
                <div class="row g-3">
                    <div class="col-sm-6">
                        <a href="@Url.Action("Create", "Product", new { area = "Admin" })" 
                           class="btn btn-outline-success w-100 py-3 text-start">
                            <i class="fas fa-plus me-2"></i>Thêm sản phẩm mới
                        </a>
                    </div>
                    <div class="col-sm-6">
                        <a href="@Url.Action("Index", "Product", new { area = "Admin" })" 
                           class="btn btn-outline-primary w-100 py-3 text-start">
                            <i class="fas fa-box me-2"></i>Quản lý sản phẩm
                        </a>
                    </div>
                    <div class="col-sm-6">
                        <a href="#" class="btn btn-outline-warning w-100 py-3 text-start">
                            <i class="fas fa-shopping-cart me-2"></i>Xem đơn hàng
                        </a>
                    </div>
                    <div class="col-sm-6">
                        <a href="@Url.Action("Index", "Home")" 
                           class="btn btn-outline-info w-100 py-3 text-start">
                            <i class="fas fa-external-link-alt me-2"></i>Xem website
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="bg-white rounded-3 p-4 shadow-sm h-100">
                <h5 class="fw-bold mb-3">
                    <i class="fas fa-clock me-2 text-info"></i>Hoạt động gần đây
                </h5>
                <div class="list-group list-group-flush">
                    <div class="list-group-item border-0 px-0">
                        <div class="d-flex align-items-center">
                            <div class="bg-success bg-opacity-10 rounded-circle p-2 me-3">
                                <i class="fas fa-plus text-success"></i>
                            </div>
                            <div class="flex-grow-1">
                                <div class="fw-medium">Sản phẩm mới được thêm</div>
                                <small class="text-muted">2 phút trước</small>
                            </div>
                        </div>
                    </div>
                    <div class="list-group-item border-0 px-0">
                        <div class="d-flex align-items-center">
                            <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                <i class="fas fa-shopping-cart text-primary"></i>
                            </div>
                            <div class="flex-grow-1">
                                <div class="fw-medium">Đơn hàng mới #001</div>
                                <small class="text-muted">15 phút trước</small>
                            </div>
                        </div>
                    </div>
                    <div class="list-group-item border-0 px-0">
                        <div class="d-flex align-items-center">
                            <div class="bg-warning bg-opacity-10 rounded-circle p-2 me-3">
                                <i class="fas fa-user text-warning"></i>
                            </div>
                            <div class="flex-grow-1">
                                <div class="fw-medium">Người dùng mới đăng ký</div>
                                <small class="text-muted">1 giờ trước</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
