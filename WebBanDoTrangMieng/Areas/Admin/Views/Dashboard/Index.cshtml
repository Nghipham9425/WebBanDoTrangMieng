    <h2 class="mb-4">Bảng điều khiển quản trị</h2>
    <div class="row g-4">
        <div class="col-md-3">
            <a href="@Url.Action("Index", "Product", new { area = "Admin" })" class="admin-card card text-center">
                <div class="card-body">
                    <h5>Quản lý sản phẩm</h5>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="@Url.Action("Index", "Order", new { area = "Admin" })" class="admin-card card text-center">
