<style>
    /* Banner styles */
    .banner {
        height: 400px;
        background-image: url('https://the350f.com/wp-content/uploads/2021/06/BO-COVER.jpg');
        background-size: cover;
        background-position: center;
        border-radius: 8px;
        margin-bottom: 50px;
        position: relative;
        overflow: hidden;
    }

    .banner-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(58, 90, 64, 0.5); /* Matcha green with opacity */
        display: flex;
        align-items: center;
    }

    .banner-content {
        width: 100%;
        color: #f8f4e5;
        padding: 0 50px;
    }

    .banner h2 {
        font-size: 42px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .banner p {
        font-size: 18px;
        margin-bottom: 25px;
        max-width: 600px;
    }

    /* Định nghĩa rõ ràng cho btn-matcha */
    .btn-matcha {
        background-color: #dad7cd; /* Màu sáng để nổi bật trên nền tối */
        color: #344e41; /* Màu chữ xanh đậm để dễ đọc */
        border: none;
        padding: 10px 25px;
        font-weight: bold;
    }

    .btn-matcha:hover {
        background-color: #f8f4e5; /* Màu sáng hơn khi hover */
        color: #3a5a40;
    }

    /* Section titles */
    .section-title {
        position: relative;
        display: inline-block;
        color: #3a5a40;
        margin-bottom: 35px;
        font-weight: bold;
        font-size: 28px;
    }

    .section-title::after {
        content: '';
        position: absolute;
        width: 60%;
        height: 3px;
        background-color: #588157;
        bottom: -10px;
        left: 0;
    }

    /* Product card styles */
    .product-card {
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 25px;
        transition: transform 0.3s, box-shadow 0.3s;
        position: relative; /* Thêm position relative để đảm bảo badge nằm trong sản phẩm */
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
    }

    .product-img {
        height: 200px;
        width: 100%;
        object-fit: cover;
    }

    .product-body {
        padding: 15px;
    }

    .product-title {
        font-weight: bold;
        color: #3a5a40;
        margin-bottom: 10px;
    }

    .product-price {
        color: #588157;
        font-weight: bold;
        font-size: 18px;
        margin-bottom: 15px;
    }

    /* Đảm bảo badge chỉ áp dụng cho các phần tử trong product-card */
    .product-card .badge-new,
    .product-card .badge-bestseller {
        position: absolute;
        top: 10px;
        right: 10px;
        padding: 5px 10px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: bold;
        z-index: 10; /* Đảm bảo hiển thị trên các phần tử khác */
    }

    .product-card .badge-new {
        background-color: #588157;
        color: white;
    }

    .product-card .badge-bestseller {
        background-color: #f8b400;
        color: #3a5a40;
    }

    /* Improved filter tabs */
    .filter-tabs {
        margin: 30px 0 40px;
        border-bottom: 2px solid #e9ecef;
        padding-bottom: 10px;
    }

    .filter-tabs .nav-link {
        color: #588157;
        font-weight: 600;
        padding: 10px 20px;
        border: none;
        background: transparent;
        position: relative;
        font-size: 16px;
        margin-right: 15px;
        transition: all 0.3s;
    }

    .filter-tabs .nav-link::after {
        content: '';
        position: absolute;
        bottom: -12px;
        left: 0;
        width: 0;
        height: 3px;
        background-color: #588157;
        transition: width 0.3s ease;
    }

    .filter-tabs .nav-link:hover::after,
    .filter-tabs .nav-link.active::after {
        width: 100%;
    }

    .filter-tabs .nav-link:hover,
    .filter-tabs .nav-link.active {
        color: #3a5a40;
        background-color: transparent;
    }

    /* Call to action section */
    .cta-section {
        background-color: #a3b18a;
        padding: 40px;
        border-radius: 8px;
        margin: 50px 0;
        color: #344e41;
        text-align: center;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .cta-section h3 {
        font-size: 28px;
        margin-bottom: 20px;
        font-weight: 600;
    }

    /* Featured categories section */
    .featured-category {
        position: relative;
        overflow: hidden;
        border-radius: 10px;
        margin-bottom: 30px;
        height: 200px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        transition: transform 0.3s;
    }

    .featured-category:hover {
        transform: translateY(-5px);
    }

    .featured-category img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s;
    }

    .featured-category:hover img {
        transform: scale(1.05);
    }

    .featured-category-content {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        padding: 20px;
        background: linear-gradient(0deg, rgba(58,90,64,0.8) 0%, rgba(58,90,64,0) 100%);
        color: white;
    }

    .featured-category-content h4 {
        margin: 0;
        font-weight: bold;
    }

    .section-heading {
        text-align: center;
        margin-bottom: 40px;
    }

    .section-heading h2 {
        color: #3a5a40;
        font-weight: bold;
        position: relative;
        display: inline-block;
        padding-bottom: 15px;
    }

    .section-heading h2::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 3px;
        background-color: #588157;
    }

    /* Responsive styles */
    @@media (max-width: 768px) {
        .banner h2 {
            font-size: 32px;
        }

        .filter-tabs .nav-link {
            padding: 8px 12px;
            font-size: 14px;
            margin-right: 5px;
        }
    }
</style>

