@{
    ViewBag.Title = "Trang chủ";
}

<!-- Hero Section with Video -->
<section class="position-relative">
  <div class="ratio ratio-16x9">
    <video autoplay muted loop playsinline class="w-100 h-100 object-fit-cover">
      <source src="https://cdn.prod.website-files.com/649249d29a20bd6bc3deac45/649249d29a20bd6bc3deaeb9_tlj-home-video-2-transcode.webm" type="video/webm">
      <source src="https://cdn.prod.website-files.com/649249d29a20bd6bc3deac45/649249d29a20bd6bc3deaeb9_tlj-home-video-2-transcode.mp4" type="video/mp4">
      <img src="https://images.unsplash.com/photo-1587314168485-3236d6710814?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80" alt="Đồ Tráng Miệng">
    </video>
  </div>
  <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center" style="background:rgba(0,0,0,0.4)">
    <div class="text-center text-white">
      <span class="fs-4">Chào mừng đến với</span>
      <h1 class="display-3 fw-bold">Đồ Tráng Miệng</h1>
      <p class="lead">Trải nghiệm hương vị tuyệt vời từ những món tráng miệng được làm từ nguyên liệu tự nhiên, không chất bảo quản</p>
      <div class="d-flex justify-content-center gap-3 mt-3">
        <a href="@Url.Action("Index", "Product")" class="btn btn-primary btn-lg">
          <i class="fas fa-shopping-bag"></i> Khám phá sản phẩm
        </a>
        <a href="@Url.Action("About", "Home")" class="btn btn-outline-light btn-lg">
          <i class="fas fa-info-circle"></i> Về chúng tôi
        </a>
      </div>
    </div>
  </div>
  <div class="position-absolute bottom-0 start-50 translate-middle-x text-white text-center mb-3">
    <span>Cuộn xuống</span>
    <div><i class="fas fa-chevron-down fa-2x"></i></div>
  </div>
</section>

<!-- About/Story Section -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6 order-lg-1 order-2">
        <div>
          <span class="text-uppercase text-primary fw-bold">Câu chuyện của chúng tôi</span>
          <h2 class="fw-bold mt-2">Đồ Tráng Miệng: Tinh Hoa Ẩm Thực Việt</h2>
          <p class="text-muted">Được làm tươi mỗi ngày</p>
          <p>Với cam kết chỉ sử dụng những nguyên liệu tốt nhất, sản phẩm của chúng tôi nổi tiếng với hương vị độc đáo và chất lượng tuyệt vời. Đội ngũ thợ làm bánh tài năng của chúng tôi tạo ra nhiều loại bánh ngọt thơm ngon được làm tươi mỗi ngày và sẵn sàng để khách hàng thưởng thức với hương vị đặc biệt và chất lượng cao.</p>
          <a href="@Url.Action("About", "Home")" class="btn btn-outline-primary mt-3">Đọc câu chuyện của chúng tôi</a>
        </div>
      </div>
      <div class="col-lg-6 order-lg-2 order-1 mb-4 mb-lg-0">
        <div class="row g-2">
          <div class="col-12">
            <img src="https://cdn.prod.website-files.com/649249d29a20bd6bc3deac45/649249d29a20bd6bc3deaea7_AdobeStock_293739586.webp" class="img-fluid rounded shadow" alt="Làm bánh thủ công">
          </div>
          <div class="col-6">
            <img src="https://cdn.prod.website-files.com/649249d29a20bd6bc3deac45/649249d29a20bd6bc3deaea6_AdobeStock_158358263.webp" class="img-fluid rounded" alt="Bỏ vào lò">
          </div>
          <div class="col-6">
            <img src="https://cdn.prod.website-files.com/649249d29a20bd6bc3deac45/649249d29a20bd6bc3deaea5_AdobeStock_62684026.webp" class="img-fluid rounded" alt="Đang nướng bánh">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Bakery Section -->
