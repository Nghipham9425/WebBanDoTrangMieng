<style>
    .about-banner {
        height: 300px;
        background-image: url('https://images.unsplash.com/photo-1516685125522-3c528e8c782d?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');
        background-size: cover;
        background-position: center;
        border-radius: 10px;
        position: relative;
        margin-bottom: 40px;
    }

    .about-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(58, 90, 64, 0.7);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .about-title {
        color: #fff;
        font-size: 2.5rem;
        font-weight: 700;
        text-align: center;
    }

    .about-section {
        margin-bottom: 50px;
    }

    .about-section h3 {
        color: #3a5a40;
        position: relative;
        padding-bottom: 15px;
        margin-bottom: 25px;
        font-weight: 600;
    }

    .about-section h3::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 70px;
        height: 3px;
        background-color: #588157;
    }

    .about-image {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        height: 100%;
    }

    .about-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s;
    }

    .about-image:hover img {
        transform: scale(1.05);
    }

    .timeline {
        position: relative;
        padding: 20px 0;
        margin-top: 30px;
    }

    .timeline::before {
        content: '';
        position: absolute;
        left: 50%;
        top: 0;
        bottom: 0;
        width: 2px;
        background-color: #e9ecef;
        transform: translateX(-50%);
    }

    .timeline-item {
        position: relative;
        margin-bottom: 30px;
    }

    .timeline-item:last-child {
        margin-bottom: 0;
    }

    .timeline-content {
        padding: 20px;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        position: relative;
        width: 45%;
    }

    .timeline-item:nth-child(odd) .timeline-content {
        margin-left: auto;
    }

    .timeline-item:nth-child(odd)::before {
        content: '';
        position: absolute;
        top: 20px;
        left: calc(55% - 10px);
        width: 20px;
        height: 2px;
        background-color: #e9ecef;
    }

    .timeline-item:nth-child(even)::before {
        content: '';
        position: absolute;
        top: 20px;
        right: calc(55% - 10px);
        width: 20px;
        height: 2px;
        background-color: #e9ecef;
    }

    .timeline-year {
        position: absolute;
        top: 10px;
        left: 50%;
        transform: translateX(-50%);
        width: 40px;
        height: 40px;
        background-color: #588157;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        z-index: 1;
    }

    .team-member {
        text-align: center;
        margin-bottom: 30px;
    }

    .team-img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        overflow: hidden;
        margin: 0 auto 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .team-img img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .team-name {
        color: #3a5a40;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .team-position {
        color: #588157;
        font-size: 0.9rem;
        margin-bottom: 10px;
    }

    .team-social {
        margin-top: 10px;
    }

    .team-social a {
        display: inline-block;
        width: 30px;
        height: 30px;
        background-color: #f8f4e5;
        border-radius: 50%;
        line-height: 30px;
        margin: 0 5px;
        color: #3a5a40;
        transition: all 0.3s;
    }

    .team-social a:hover {
        background-color: #588157;
        color: white;
    }

    @@media (max-width: 768px) {
        .timeline::before {
            left: 30px;
        }

        .timeline-content {
            width: calc(100% - 60px);
            margin-left: 60px !important;
        }

        .timeline-year {
            left: 30px;
            transform: none;
        }

        .timeline-item::before {
            left: 50px !important;
            right: auto !important;
            width: 10px !important;
        }
    }
</style>

