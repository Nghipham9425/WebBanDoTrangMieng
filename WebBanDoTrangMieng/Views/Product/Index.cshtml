@{
    ViewBag.Title = "Sản phẩm";
}

<div class="container">
    <!-- Banner -->
    <div class="position-relative mb-4 rounded overflow-hidden" style="height:200px; background:url('https://images.unsplash.com/photo-1528712306091-ed0763094c98?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80') center/cover no-repeat;">
        <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center" style="background:rgba(125,158,95,0.7);">
            <h1 class="text-white fw-bold display-5">Sản phẩm</h1>
        </div>
    </div>

    <div class="row">
        <!-- Sidebar Filter -->
        <div class="col-lg-3 mb-4 mb-lg-0">
            <div class="card">
                <div class="card-header bg-white fw-bold fs-5">Bộ lọc sản phẩm</div>
                <div class="card-body">
                    <div class="mb-3 d-flex flex-wrap gap-2">
                        <span class="badge bg-light text-dark d-flex align-items-center">Bánh ngọt <i class="fas fa-times ms-2" style="cursor:pointer;"></i></span>
                        <span class="badge bg-light text-dark d-flex align-items-center">Dưới 100.000đ <i class="fas fa-times ms-2" style="cursor:pointer;"></i></span>
                    </div>
                    <div class="mb-4">
                        <div class="fw-semibold mb-2">Danh mục</div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="category1" checked>
                            <label class="form-check-label" for="category1">Bánh ngọt</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="category2">
                            <label class="form-check-label" for="category2">Bánh kem</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="category3">
                            <label class="form-check-label" for="category3">Kem các loại</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="category4">
                            <label class="form-check-label" for="category4">Trà sữa</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="category5">
                            <label class="form-check-label" for="category5">Đồ uống matcha</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="category6">
                            <label class="form-check-label" for="category6">Đồ ăn vặt</label>
                        </div>
                    </div>
                    <div class="mb-4">
                        <div class="fw-semibold mb-2">Giá</div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="price1" checked>
                            <label class="form-check-label" for="price1">Dưới 100.000đ</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="price2">
                            <label class="form-check-label" for="price2">100.000đ - 200.000đ</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="price3">
                            <label class="form-check-label" for="price3">200.000đ - 300.000đ</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="price4">
                            <label class="form-check-label" for="price4">Trên 300.000đ</label>
                        </div>
                        <div class="d-flex align-items-center gap-2 mt-2">
                            <input type="text" class="form-control form-control-sm w-50" placeholder="Từ">
                            <span>-</span>
                            <input type="text" class="form-control form-control-sm w-50" placeholder="Đến">
                        </div>
                        <button class="btn btn-success btn-sm mt-3 w-100">Áp dụng</button>
                    </div>
                    <div>
                        <div class="fw-semibold mb-2">Đặc điểm</div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="feature1">
                            <label class="form-check-label" for="feature1">Sản phẩm mới</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="feature2">
                            <label class="form-check-label" for="feature2">Bán chạy nhất</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="feature3">
                            <label class="form-check-label" for="feature3">Giảm giá</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Product List -->
        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="text-muted">Hiển thị 1-12 trên 36 sản phẩm</div>
                <div class="d-flex align-items-center gap-2">
                    <select id="sortOption" class="form-select form-select-sm w-auto">
                        <option value="newest">Mới nhất</option>
                        <option value="price-asc">Giá: Thấp đến Cao</option>
                        <option value="price-desc">Giá: Cao đến Thấp</option>
                        <option value="name-asc">Tên: A-Z</option>
                        <option value="name-desc">Tên: Z-A</option>
                    </select>
                    <div class="btn-group ms-2" role="group">
                        <button class="btn btn-outline-secondary btn-sm active" id="gridViewBtn"><i class="fas fa-th"></i></button>
                        <button class="btn btn-outline-secondary btn-sm" id="listViewBtn"><i class="fas fa-list"></i></button>
                    </div>
                </div>
            </div>

            <!-- Grid View -->
            <div class="product-grid-view">
                <div class="row g-4">
                    <!-- Product Card Example -->
                    <div class="col-md-4">
                        <div class="card h-100 position-relative">
                            <span class="badge bg-success position-absolute top-0 end-0 m-2">Mới</span>
                            <img src="https://images.unsplash.com/photo-1587314168485-3236d6710814?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" class="card-img-top" alt="Bánh Mousse Matcha">
                            <div class="card-body text-center">
                                <h5 class="card-title">Bánh Mousse Matcha</h5>
                                <div class="fw-bold text-danger mb-2">75.000đ</div>
                                <div class="d-flex justify-content-center gap-2">
                                    <a href="@Url.Action("Detail", "Product", new { id = 1 })" class="btn btn-outline-primary btn-sm">Xem chi tiết</a>
                                    <button class="btn btn-outline-danger btn-sm"><i class="far fa-heart"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ... Lặp lại cho các sản phẩm khác ... -->
                </div>
            </div>

            <!-- List View -->
            <div class="product-list-view" style="display:none;">
                <div class="card mb-3">
                    <div class="row g-0 align-items-center">
                        <div class="col-md-4">
                            <img src="https://images.unsplash.com/photo-1587314168485-3236d6710814?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" class="img-fluid rounded-start" alt="Bánh Mousse Matcha">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">Bánh Mousse Matcha</h5>
                                <div class="fw-bold text-danger mb-2">75.000đ</div>
                                <p class="card-text">Bánh mousse matcha với lớp kem mịn và hương vị trà xanh đặc trưng...</p>
                                <div class="d-flex gap-2">
                                    <a href="@Url.Action("Detail", "Product", new { id = 1 })" class="btn btn-outline-primary btn-sm">Xem chi tiết</a>
                                    <button class="btn btn-outline-danger btn-sm"><i class="far fa-heart"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pagination -->
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mt-4">
                    <li class="page-item disabled"><a class="page-link" href="#"><i class="fas fa-angle-left"></i></a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                    <li class="page-item"><a class="page-link" href="#"><i class="fas fa-angle-right"></i></a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- Toast notifications container -->
<div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1055;"></div>

@section scripts {
    <script>$(document).ready(function() {
            // Toggle filter sections (nếu cần)
            // ...
            // Switch between grid and list view
            $('#gridViewBtn').click(function() {
                $(this).addClass('active');
                $('#listViewBtn').removeClass('active');
                $('.product-grid-view').show();
                $('.product-list-view').hide();
            });
            $('#listViewBtn').click(function() {
                $(this).addClass('active');
                $('#gridViewBtn').removeClass('active');
                $('.product-grid-view').hide();
                $('.product-list-view').show();
            });
            // Handle sort dropdown change
            $('#sortOption').change(function() {
                const sortValue = $(this).val();
                // ...
            });
            // Handle filter tag removal
            $('.badge .fa-times').click(function() {
                $(this).parent().fadeOut(300, function() {
                    $(this).remove();
                });
            });
            // Add to wishlist button
            $('.btn-outline-danger').click(function() {
                const heartIcon = $(this).find('i');
                heartIcon.toggleClass('far fas');
            });
        });</script>
}

