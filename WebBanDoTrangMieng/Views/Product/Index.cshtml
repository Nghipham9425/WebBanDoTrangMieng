<style>
    .product-banner {
        height: 200px;
        background-image: url('https://images.unsplash.com/photo-1528712306091-ed0763094c98?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');
        background-size: cover;
        background-position: center;
        border-radius: 10px;
        position: relative;
        margin-bottom: 40px;
    }

    .product-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(58, 90, 64, 0.7);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .product-banner-title {
        color: #fff;
        font-size: 2.5rem;
        font-weight: 700;
        text-align: center;
    }

    .filter-sidebar {
        background-color: white;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
    }

    .filter-header {
        color: #3a5a40;
        font-weight: 600;
        margin-bottom: 20px;
        position: relative;
        padding-bottom: 10px;
    }

    .filter-header::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 50px;
        height: 2px;
        background-color: #588157;
    }

    .filter-section {
        margin-bottom: 25px;
    }

    .filter-section-title {
        font-weight: 600;
        color: #3a5a40;
        margin-bottom: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        cursor: pointer;
    }

    .filter-section-title i {
        transition: transform 0.3s;
    }

    .filter-section-title.collapsed i {
        transform: rotate(-90deg);
    }

    .filter-section-content {
        margin-top: 10px;
    }

    .filter-checkbox {
        margin-bottom: 10px;
    }

    .filter-checkbox input {
        margin-right: 10px;
    }

    .filter-checkbox label {
        color: #555;
        cursor: pointer;
    }

    .price-range {
        display: flex;
        align-items: center;
        margin-top: 15px;
    }

    .price-input {
        width: 100px;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 4px;
        margin-right: 10px;
    }

    .price-separator {
        margin: 0 10px;
        color: #555;
    }

    .filter-apply-btn {
        background-color: #588157;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 4px;
        font-weight: 600;
        margin-top: 15px;
        transition: all 0.3s;
    }

    .filter-apply-btn:hover {
        background-color: #3a5a40;
    }

    .filter-tags {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 20px;
        gap: 10px;
    }

    .filter-tag {
        background-color: #f8f4e5;
        color: #3a5a40;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 14px;
        display: flex;
        align-items: center;
    }

    .filter-tag i {
        margin-left: 5px;
        cursor: pointer;
    }

    .filter-tag i:hover {
        color: #dc3545;
    }

    .product-sort {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .product-count {
        color: #555;
    }

    .sort-dropdown {
        position: relative;
    }

    .sort-dropdown select {
        padding: 8px 30px 8px 15px;
        border: 1px solid #ddd;
        border-radius: 4px;
        appearance: none;
        background-color: white;
        color: #3a5a40;
        cursor: pointer;
    }

    .sort-dropdown::after {
        content: '\f078';
        font-family: 'Font Awesome 5 Free';
        font-weight: 900;
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        pointer-events: none;
        color: #3a5a40;
    }

    .view-buttons {
        display: flex;
        gap: 10px;
    }

    .view-btn {
        width: 35px;
        height: 35px;
        border: 1px solid #ddd;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
        background-color: white;
        cursor: pointer;
        transition: all 0.2s;
    }

    .view-btn.active {
        background-color: #588157;
        color: white;
        border-color: #588157;
    }

    .product-card {
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 25px;
        transition: transform 0.3s, box-shadow 0.3s;
        position: relative;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
    }

    .product-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        padding: 5px 10px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 600;
        z-index: 10;
    }

    .badge-new {
        background-color: #588157;
        color: white;
    }

    .badge-bestseller {
        background-color: #f8b400;
        color: #3a5a40;
    }

    .product-img {
        height: 200px;
        width: 100%;
        object-fit: cover;
    }

    .product-body {
        padding: 15px;
    }

    .product-title {
        font-weight: 600;
        color: #3a5a40;
        margin-bottom: 5px;
        font-size: 16px;
    }

    .product-price {
        color: #588157;
        font-weight: 700;
        margin-bottom: 15px;
    }

    .product-action {
        display: flex;
        justify-content: space-between;
    }

    .add-to-cart-btn {
        background-color: #f8f4e5;
        color: #3a5a40;
        border: none;
        padding: 8px 15px;
        border-radius: 4px;
        font-weight: 600;
        transition: all 0.3s;
        flex-grow: 1;
        margin-right: 10px;
        text-align: center;
        text-decoration: none;
    }

    .add-to-cart-btn:hover {
        background-color: #588157;
        color: white;
        text-decoration: none;
    }

    .wishlist-btn {
        width: 36px;
        height: 36px;
        background-color: #f8f4e5;
        border: none;
        border-radius: 4px;
        color: #588157;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s;
    }

    .wishlist-btn:hover {
        background-color: #ffecd1;
        color: #e76f51;
    }

    .product-list-view {
        display: none;
    }

    .product-list-view .product-card {
        display: flex;
        height: auto;
    }

    .product-list-view .product-img {
        width: 200px;
        height: 200px;
    }

    .product-list-view .product-body {
        flex-grow: 1;
        padding: 20px;
        display: flex;
        flex-direction: column;
    }

    .product-list-view .product-title {
        font-size: 18px;
    }

    .product-list-view .product-description {
        margin-bottom: 15px;
        color: #555;
    }

    .product-list-view .product-action {
        margin-top: auto;
    }

    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 40px;
        margin-bottom: 20px;
    }

    .pagination {
        display: flex;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .pagination li {
        margin: 0 5px;
    }

    .pagination li a {
        display: block;
        width: 40px;
        height: 40px;
        line-height: 40px;
        text-align: center;
        background-color: white;
        color: #3a5a40;
        text-decoration: none;
        border-radius: 4px;
        transition: all 0.3s;
    }

    .pagination li a:hover {
        background-color: #f8f4e5;
    }

    .pagination li.active a {
        background-color: #588157;
        color: white;
    }

    /* Toast notification */
    .toast-container {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 9999;
    }

    .toast {
        background-color: rgba(88, 129, 87, 0.9);
        color: white;
        padding: 12px 20px;
        border-radius: 4px;
        margin-top: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .toast.show {
        opacity: 1;
    }

    .toast i {
        margin-right: 10px;
    }

    @@media (max-width: 991px) {
        .filter-sidebar {
            margin-bottom: 30px;
        }
    }

    @@media (max-width: 768px) {
        .product-sort {
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
        }

        .product-list-view .product-card {
            flex-direction: column;
        }

        .product-list-view .product-img {
            width: 100%;
