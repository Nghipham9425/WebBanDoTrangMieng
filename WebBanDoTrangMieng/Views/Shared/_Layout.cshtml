<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Đồ Tráng Miệng</title>
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="@ViewBag.Description ?? 'Cửa hàng đồ tráng miệng online chất lượng cao với bánh flan, tiramisu, cheesecake và nhiều món ngon khác.'">
    <meta name="keywords" content="bánh flan, tiramisu, cheesecake, đồ tráng miệng, bánh ngọt, pudding">
    <meta name="author" content="Đồ Tráng Miệng">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    
    <!-- CSS Files -->
    @Styles.Render("~/Content/css")
    <link href="~/Content/layout.css" rel="stylesheet" />
    <link href="~/Content/auth-modal.css" rel="stylesheet" />
    <link href="~/Content/components.css" rel="stylesheet" />
    <link href="~/Content/home.css" rel="stylesheet" />
    <link href="~/Content/product.css" rel="stylesheet" />
    <link href="~/Content/cart.css" rel="stylesheet" />
    <link href="~/Content/contact.css" rel="stylesheet" />
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>
    <!-- ==========================================
         TOP HEADER SECTION
         ========================================== -->
    <div class="top-header">
        <div class="container">
            <div class="top-header-content">
                <div class="contact-info">
                    <span><i class="fas fa-phone"></i> Hotline: 0123-456-789</span>
                    <span><i class="fas fa-envelope"></i> info@dotrangmieng.com</span>
                    <span><i class="fas fa-clock"></i> Mở cửa: 8:00 - 22:00</span>
                </div>
                <div class="social-icons">
                    <a href="#" title="Facebook"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" title="Instagram"><i class="fab fa-instagram"></i></a>
                    <a href="#" title="Twitter"><i class="fab fa-twitter"></i></a>
                    <a href="#" title="YouTube"><i class="fab fa-youtube"></i></a>
                </div>
            </div>
        </div>
    </div>

    <!-- ==========================================
         MAIN NAVIGATION
         ========================================== -->
    <nav class="navbar navbar-expand-lg main-navbar">
        <div class="container">
            <!-- Brand Logo -->
            @Html.ActionLink("Đồ Tráng Miệng", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            
            <!-- Mobile Menu Toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon">
                    <i class="fas fa-bars"></i>
                </span>
            </button>

            <!-- Navigation Menu -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Trang chủ", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button">
                            Sản phẩm <i class="fas fa-chevron-down dropdown-icon"></i>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Tất cả sản phẩm", "Index", "Product", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Bánh Flan", "Index", "Product", new { category = "flan" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Tiramisu", "Index", "Product", new { category = "tiramisu" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Cheesecake", "Index", "Product", new { category = "cheesecake" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Pudding", "Index", "Product", new { category = "pudding" }, new { @class = "dropdown-item" })</li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Giới thiệu", "About", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Liên hệ", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                </ul>

                <!-- Action Buttons -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="#" class="nav-link search-toggle" title="Tìm kiếm">
                            <i class="fas fa-search"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Cart")" class="nav-link cart-toggle" title="Giỏ hàng">
                            <i class="fas fa-shopping-cart"></i>
                            <span class="cart-count">0</span>
                        </a>
                    </li>
                    <li class="nav-item user-menu">
                        @if (Session["UserId"] != null)
                        {
                            <!-- User is logged in -->
                            <div class="user-dropdown">
                                <a href="#" class="nav-link user-toggle" title="Tài khoản">
                                    <i class="fas fa-user"></i>
                                    <span class="user-name">@Session["UserName"]</span>
                                    <i class="fas fa-chevron-down dropdown-arrow"></i>
                                </a>
                                <div class="user-dropdown-menu">
                                    <div class="user-info">
                                        <div class="user-avatar">
                                            <i class="fas fa-user-circle"></i>
                                        </div>
                                        <div class="user-details">
                                            <strong>@Session["UserName"]</strong>
                                            <small>@Session["Email"]</small>
                                        </div>
                                    </div>
                                    <div class="dropdown-divider"></div>
                                    <a href="#" class="dropdown-item">
                                        <i class="fas fa-user"></i>
                                        <span>Thông tin cá nhân</span>
                                    </a>
                                    <a href="#" class="dropdown-item">
                                        <i class="fas fa-shopping-bag"></i>
                                        <span>Lịch sử đơn hàng</span>
                                    </a>
                                    <a href="#" class="dropdown-item">
                                        <i class="fas fa-heart"></i>
                                        <span>Sản phẩm yêu thích</span>
                                    </a>
                                    <a href="#" class="dropdown-item">
                                        <i class="fas fa-cog"></i>
                                        <span>Cài đặt</span>
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a href="@Url.Action("Logout", "User")" class="dropdown-item logout">
                                        <i class="fas fa-sign-out-alt"></i>
                                        <span>Đăng xuất</span>
                                    </a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <!-- User is not logged in -->
                            <a href="#" class="nav-link user-toggle" title="Tài khoản">
                                <i class="fas fa-user"></i>
                            </a>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ==========================================
         MAIN CONTENT AREA
         ========================================== -->
    <main class="body-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- ==========================================
         FOOTER SECTION
         ========================================== -->
    <footer>
        <div class="container">
            <div class="row">
                <!-- Company Info -->
                <div class="col-lg-4 col-md-6 footer-widget">
                    <h4>Đồ Tráng Miệng</h4>
                    <p>Cửa hàng đồ tráng miệng online chất lượng cao với đa dạng các món bánh ngon và hấp dẫn.</p>
                    <div class="contact-details">
                        <p><i class="fas fa-map-marker-alt"></i> 123 Đường ABC, Quận 1, TP.HCM</p>
                        <p><i class="fas fa-phone"></i> 0123-456-789</p>
                        <p><i class="fas fa-envelope"></i> info@dotrangmieng.com</p>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="col-lg-2 col-md-6 footer-widget">
                    <h4>Liên kết</h4>
                    <ul>
                        <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                        <li>@Html.ActionLink("Sản phẩm", "Index", "Product")</li>
                        <li>@Html.ActionLink("Giới thiệu", "About", "Home")</li>
                        <li>@Html.ActionLink("Liên hệ", "Contact", "Home")</li>
                    </ul>
                </div>

                <!-- Product Categories -->
                <div class="col-lg-3 col-md-6 footer-widget">
                    <h4>Danh mục</h4>
                    <ul>
                        <li><a href="#">Bánh Flan</a></li>
                        <li><a href="#">Tiramisu</a></li>
                        <li><a href="#">Cheesecake</a></li>
                        <li><a href="#">Pudding</a></li>
                        <li><a href="#">Bánh kem</a></li>
                    </ul>
                </div>

                <!-- Customer Service -->
                <div class="col-lg-3 col-md-6 footer-widget">
                    <h4>Hỗ trợ</h4>
                    <ul>
                        <li><a href="#">Chính sách bảo mật</a></li>
                        <li><a href="#">Điều khoản sử dụng</a></li>
                        <li><a href="#">Hướng dẫn đặt hàng</a></li>
                        <li><a href="#">Chính sách đổi trả</a></li>
                        <li><a href="#">FAQ</a></li>
                    </ul>
                </div>
            </div>

            <!-- Copyright -->
            <div class="copyright">
                <p>&copy; @DateTime.Now.Year Đồ Tráng Miệng. Tất cả quyền được bảo lưu.</p>
            </div>
        </div>
    </footer>

    <!-- ==========================================
         AUTH MODAL
         ========================================== -->
    <div id="authModal" class="auth-modal">
        <div class="auth-container">
            <span class="auth-close">&times;</span>
            
            <!-- Simple Tabs -->
            <div class="auth-tabs">
                <div class="auth-tab active" data-target="loginForm">
                    <i class="fas fa-sign-in-alt"></i> Đăng nhập
                </div>
                <div class="auth-tab" data-target="registerForm">
                    <i class="fas fa-user-plus"></i> Đăng ký
                </div>
            </div>
            
            <div class="auth-content">
                <!-- Login Form -->
                <div id="loginForm" class="auth-form active">
                    <h3 class="form-heading">Đăng nhập</h3>
                    <form>
                        <div class="form-group">
                            <label for="loginEmail">Email</label>
                            <i class="fas fa-envelope input-icon"></i>
                            <input type="email" id="loginEmail" class="form-control" placeholder="Nhập email của bạn" required>
                        </div>
                        <div class="form-group">
                            <label for="loginPassword">Mật khẩu</label>
                            <i class="fas fa-lock input-icon"></i>
                            <input type="password" id="loginPassword" class="form-control" placeholder="Nhập mật khẩu" required>
                            <i class="fas fa-eye toggle-password" data-target="loginPassword"></i>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" id="rememberMe" class="form-check-input">
                            <label for="rememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                        </div>
                        <button type="submit" class="auth-btn">
                            <i class="fas fa-sign-in-alt"></i> Đăng nhập
                        </button>
                    </form>
                    
                    <div class="form-footer">
                        <a href="#" id="forgotPassword">Quên mật khẩu?</a>
                    </div>
                </div>

                <!-- Register Form -->
                <div id="registerForm" class="auth-form">
                    <h3 class="form-heading">Đăng ký</h3>
                    <form>
                        <div class="form-group">
                            <label for="fullName">Họ và tên</label>
                            <i class="fas fa-user input-icon"></i>
                            <input type="text" id="fullName" class="form-control" placeholder="Nhập họ và tên" required>
                        </div>
                        <div class="form-group">
                            <label for="registerEmail">Email</label>
                            <i class="fas fa-envelope input-icon"></i>
                            <input type="email" id="registerEmail" class="form-control" placeholder="Nhập email của bạn" required>
                        </div>
                        <div class="form-group">
                            <label for="registerPassword">Mật khẩu</label>
                            <i class="fas fa-lock input-icon"></i>
                            <input type="password" id="registerPassword" class="form-control" placeholder="Nhập mật khẩu (tối thiểu 6 ký tự)" required>
                            <i class="fas fa-eye toggle-password" data-target="registerPassword"></i>
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword">Xác nhận mật khẩu</label>
                            <i class="fas fa-lock input-icon"></i>
                            <input type="password" id="confirmPassword" class="form-control" placeholder="Nhập lại mật khẩu" required>
                            <i class="fas fa-eye toggle-password" data-target="confirmPassword"></i>
                        </div>
                        <button type="submit" class="auth-btn">
                            <i class="fas fa-user-plus"></i> Đăng ký
                        </button>
                    </form>
                </div>

                <!-- Reset Password Form -->
                <div id="resetPasswordForm" class="auth-form">
                    <h3 class="form-heading">Đặt lại mật khẩu</h3>
                    <div class="form-icon">
                        <i class="fas fa-key"></i>
                    </div>
                    <p>Nhập email của bạn và chúng tôi sẽ gửi liên kết đặt lại mật khẩu</p>
                    <form>
                        <div class="form-group">
                            <label for="resetEmail">Email</label>
                            <i class="fas fa-envelope input-icon"></i>
                            <input type="email" id="resetEmail" class="form-control" placeholder="Nhập email của bạn" required>
                        </div>
                        <button type="submit" class="auth-btn">
                            <i class="fas fa-paper-plane"></i> GỬI LIÊN KẾT
                        </button>
                    </form>
                    <div class="form-footer">
                        <a href="#" class="back-link" id="backToLogin">
                            <i class="fas fa-arrow-left"></i> Quay lại đăng nhập
                        </a>
                    </div>
                </div>


            </div>
        </div>
    </div>

    <!-- ==========================================
         JAVASCRIPT FILES
         ========================================== -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/layout.js"></script>
    <script src="~/Scripts/auth-modal.js"></script>
    <script src="~/Scripts/home-video.js"></script>
    

    
    @RenderSection("scripts", required: false)
</body>
</html>
