    <script>
        // Function to toggle password visibility
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = input.nextElementSibling.querySelector('i');

            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            }
        }

        // Function to show alert
        function showAlert(type, message) {
            const alert = document.getElementById('authAlert');
            const alertMessage = document.getElementById('authAlertMessage');

            alert.className = 'auth-alert ' + type;
            alertMessage.textContent = message;
            alert.style.display = 'block';

            // Auto hide after 4 seconds
            setTimeout(() => {
                alert.style.display = 'none';
            }, 4000);
        }

        $(document).ready(function () {
            // Toggle dropdown on mobile
            if ($(window).width() < 992) {
                $('.dropdown-toggle').click(function (e) {
                    e.preventDefault();
                    $(this).next('.dropdown-menu').slideToggle();
                });
            } else {
                // Desktop dropdown behavior - correct implementation
                $('.navbar .dropdown').hover(
                    function () {
                        $(this).find('.dropdown-menu').stop(true, true).css({
                            'opacity': '1',
                            'visibility': 'visible',
                            'pointer-events': 'auto'
                        });
                    },
                    function () {
                        $(this).find('.dropdown-menu').stop(true, true).css({
                            'opacity': '0',
                            'visibility': 'hidden',
                            'pointer-events': 'none'
                        });
                    }
                );
            }

            // Reset dropdowns on window resize
            $(window).resize(function () {
                if ($(window).width() >= 992) {
                    $('.dropdown-menu').removeAttr('style');
                }
            });

            // Login/Register modal functionality
            $('#loginBtn').click(function (e) {
                e.preventDefault();
                $('#authModal').addClass('show');
                $('body').css('overflow', 'hidden'); // Prevent scrolling when modal is open
            });

            // Close modal when clicking close button or outside the modal
            $('#authClose, .auth-modal').click(function (e) {
                if (e.target === this) {
                    $('#authModal').removeClass('show');
                    $('body').css('overflow', '');
                }
            });

            // Prevent modal close when clicking inside modal content
            $('.auth-container').click(function (e) {
                e.stopPropagation();
            });

            // Switch between forms
            $('.auth-tab').click(function () {
                const tab = $(this).data('tab');

                // Update active tab
                $('.auth-tab').removeClass('active');
                $(this).addClass('active');

                // Show appropriate form
                $('.auth-form').removeClass('active');
                $('#' + tab + 'Form').addClass('active');
            });

            // Switch to login from register
            $('.switch-to-login').click(function (e) {
                e.preventDefault();
                $('.auth-tab[data-tab="login"]').click();
            });

            // Forgot password link
            $('#forgotPasswordLink').click(function (e) {
                e.preventDefault();
                $('.auth-form').removeClass('active');
                $('#resetPasswordForm').addClass('active');
                $('.auth-tab').removeClass('active');
            });

            // Back to login from reset password
            $('#backToLogin').click(function (e) {
                e.preventDefault();
                $('.auth-form').removeClass('active');
                $('#loginForm').addClass('active');
                $('.auth-tab[data-tab="login"]').addClass('active');
            });

            // Login form submission
            $('#loginForm form').submit(function (e) {
                e.preventDefault();

                const email = $('#loginEmail').val();
                const password = $('#loginPassword').val();

                // Simulate validation
                if (email === "" || password === "") {
                    showAlert('error', 'Vui lòng nhập đầy đủ thông tin đăng nhập.');
                    return;
                }

                // Simulate login success
                showAlert('success', 'Đăng nhập thành công!');
                setTimeout(function () {
                    $('#authModal').removeClass('show');
                    $('body').css('overflow', '');
                }, 1500);
            });

            // Register form submission
            $('#registerForm form').submit(function (e) {
                e.preventDefault();

                const name = $('#registerName').val();
                const email = $('#registerEmail').val();
                const password = $('#registerPassword').val();
                const confirmPassword = $('#confirmPassword').val();
                const agreeTerms = $('#agreeTerms').is(':checked');

                // Simulate validation
                if (name === "" || email === "" || password === "" || confirmPassword === "") {
                    showAlert('error', 'Vui lòng nhập đầy đủ thông tin đăng ký.');
                    return;
                }

                if (password !== confirmPassword) {
                    showAlert('error', 'Mật khẩu xác nhận không khớp.');
                    return;
                }

                if (!agreeTerms) {
                    showAlert('error', 'Bạn cần đồng ý với điều khoản sử dụng.');
                    return;
                }

                // Simulate register success
                showAlert('success', 'Đăng ký thành công! Vui lòng kiểm tra email để xác minh tài khoản.');
                setTimeout(function () {
                    $('#authModal').removeClass('show');
                    $('body').css('overflow', '');
                }, 2000);
            });

            // Reset password form submission
            $('#resetPasswordForm form').submit(function (e) {
                e.preventDefault();

                const email = $('#resetEmail').val();

                // Simulate validation
                if (email === "") {
                    showAlert('error', 'Vui lòng nhập địa chỉ email.');
                    return;
                }

                // Simulate password reset request
                showAlert('success', 'Liên kết đặt lại mật khẩu đã được gửi đến email của bạn!');
                setTimeout(function () {
                    // Go back to login form
                    $('.auth-form').removeClass('active');
                    $('#loginForm').addClass('active');
                    $('.auth-tab[data-tab="login"]').addClass('active');
                }, 2000);
            });
        });
    </script>
