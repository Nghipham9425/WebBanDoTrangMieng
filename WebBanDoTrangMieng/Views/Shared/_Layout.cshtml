<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Đồ Tráng Miệng</title>
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="@ViewBag.Description ?? 'Cửa hàng đồ tráng miệng online chất lượng cao với bánh flan, tiramisu, cheesecake và nhiều món ngon khác.'">
    <meta name="keywords" content="bánh flan, tiramisu, cheesecake, đồ tráng miệng, bánh ngọt, pudding">
    <meta name="author" content="Đồ Tráng Miệng">
    
    <!-- Favicon -->
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    
    <!-- CSS Bundle -->
    @Styles.Render("~/Content/css")
    
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Inter Font from Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>
    <!-- ==========================================
         TOP HEADER SECTION - Bootstrap Success Theme
         ========================================== -->
    <div class="bg-success text-white py-2">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-3">
                    <span class="small"><i class="fas fa-phone me-1"></i> Hotline: 0123-456-789</span>
                    <span class="small d-none d-md-inline"><i class="fas fa-envelope me-1"></i> info@dotrangmieng.com</span>
                    <span class="small d-none d-lg-inline"><i class="fas fa-clock me-1"></i> Mở cửa: 8:00 - 22:00</span>
                </div>
                <div class="d-flex align-items-center gap-2">
                    <a href="#" class="text-white-50 hover-text-white" title="Facebook">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="text-white-50 hover-text-white" title="Instagram">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="#" class="text-white-50 hover-text-white" title="Twitter">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="text-white-50 hover-text-white" title="YouTube">
                        <i class="fab fa-youtube"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- ==========================================
         MAIN NAVIGATION - Bootstrap Success Theme
         ========================================== -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container">
            <!-- Brand Logo -->
            @Html.ActionLink("Đồ Tráng Miệng", "Index", "Home", new { area = "" }, 
                new { @class = "navbar-brand fw-bold text-success fs-3" })
            
            <!-- Mobile Menu Toggle -->
            <button class="navbar-toggler border-success" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <i class="fas fa-bars text-success"></i>
            </button>

            <!-- Navigation Menu -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Trang chủ", "Index", "Home", new { area = "" }, 
                            new { @class = "nav-link text-dark fw-semibold" })
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark fw-semibold" href="#" role="button" 
                           data-bs-toggle="dropdown" aria-expanded="false">
                            Sản phẩm
                        </a>
                        <ul class="dropdown-menu border-0 shadow-lg">
                            <li>@Html.ActionLink("Tất cả sản phẩm", "Index", "Product", new { area = "" }, 
                                new { @class = "dropdown-item text-dark" })</li>
                            <li><hr class="dropdown-divider"></li>
                            <li>@Html.ActionLink("Bánh Flan", "Index", "Product", new { category = "flan" }, 
                                new { @class = "dropdown-item text-dark" })</li>
                            <li>@Html.ActionLink("Tiramisu", "Index", "Product", new { category = "tiramisu" }, 
                                new { @class = "dropdown-item text-dark" })</li>
                            <li>@Html.ActionLink("Cheesecake", "Index", "Product", new { category = "cheesecake" }, 
                                new { @class = "dropdown-item text-dark" })</li>
                            <li>@Html.ActionLink("Pudding", "Index", "Product", new { category = "pudding" }, 
                                new { @class = "dropdown-item text-dark" })</li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Giới thiệu", "About", "Home", new { area = "" }, 
                            new { @class = "nav-link text-dark fw-semibold" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Liên hệ", "Contact", "Home", new { area = "" }, 
                            new { @class = "nav-link text-dark fw-semibold" })
                    </li>
                </ul>

                <!-- Action Buttons -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="#" class="nav-link text-success" title="Tìm kiếm">
                            <i class="fas fa-search"></i>
                        </a>
                    </li>
                    <li class="nav-item position-relative">
                        <a href="@Url.Action("Index", "Cart")" class="nav-link text-success" title="Giỏ hàng">
                            <i class="fas fa-shopping-cart"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger small">
                                0
                            </span>
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        @if (Session["UserId"] != null)
                        {
                            <!-- User is logged in -->
                            <a class="nav-link dropdown-toggle text-success" href="#" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user"></i>
                                <span class="d-none d-md-inline ms-1">@Session["UserName"]</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg">
                                <li>
                                    <div class="dropdown-item-text bg-light">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user-circle text-success fs-3 me-2"></i>
                                            <div>
                                                <strong class="text-success">@Session["UserName"]</strong><br>
                                                <small class="text-muted">@Session["Email"]</small>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a href="#" class="dropdown-item text-dark">
                                        <i class="fas fa-user me-2 text-success"></i>
                                        Thông tin cá nhân
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="dropdown-item text-dark">
                                        <i class="fas fa-shopping-bag me-2 text-success"></i>
                                        Lịch sử đơn hàng
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="dropdown-item text-dark">
                                        <i class="fas fa-heart me-2 text-success"></i>
                                        Sản phẩm yêu thích
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="dropdown-item text-dark">
                                        <i class="fas fa-cog me-2 text-success"></i>
                                        Cài đặt
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a href="@Url.Action("Logout", "User")" class="dropdown-item text-danger">
                                        <i class="fas fa-sign-out-alt me-2"></i>
                                        Đăng xuất
                                    </a>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <!-- User is not logged in -->
                            <a href="#" class="nav-link text-success user-toggle" title="Tài khoản">
                                <i class="fas fa-user"></i>
                            </a>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ==========================================
         MAIN CONTENT AREA
         ========================================== -->
    <main>
        @RenderBody()
    </main>

    <!-- ==========================================
         FOOTER SECTION - Bootstrap Success Theme
         ========================================== -->
    <footer class="bg-dark text-light py-5 mt-5">
        <div class="container">
            <div class="row">
                <!-- Company Info -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <h4 class="text-success mb-3">
                        <i class="fas fa-leaf me-2"></i>
                        Đồ Tráng Miệng
                    </h4>
                    <p class="text-light-50 mb-3">
                        Cửa hàng đồ tráng miệng online chất lượng cao với đa dạng các món bánh ngon và hấp dẫn.
                    </p>
                    <div class="contact-details">
                        <p class="mb-2">
                            <i class="fas fa-map-marker-alt text-success me-2"></i>
                            123 Đường ABC, Quận 1, TP.HCM
                        </p>
                        <p class="mb-2">
                            <i class="fas fa-phone text-success me-2"></i>
                            0123-456-789
                        </p>
                        <p class="mb-2">
                            <i class="fas fa-envelope text-success me-2"></i>
                            info@dotrangmieng.com
                        </p>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="col-lg-2 col-md-6 mb-4">
                    <h5 class="text-success mb-3">Liên kết</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">@Html.ActionLink("Trang chủ", "Index", "Home", null, new { @class = "text-light text-decoration-none" })</li>
                        <li class="mb-2">@Html.ActionLink("Sản phẩm", "Index", "Product", null, new { @class = "text-light text-decoration-none" })</li>
                        <li class="mb-2">@Html.ActionLink("Giới thiệu", "About", "Home", null, new { @class = "text-light text-decoration-none" })</li>
                        <li class="mb-2">@Html.ActionLink("Liên hệ", "Contact", "Home", null, new { @class = "text-light text-decoration-none" })</li>
                    </ul>
                </div>

                <!-- Product Categories -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="text-success mb-3">Danh mục</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a href="#" class="text-light text-decoration-none">
                                <i class="fas fa-cookie-bite me-2 text-success"></i>
                                Bánh Flan
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-light text-decoration-none">
                                <i class="fas fa-birthday-cake me-2 text-success"></i>
                                Tiramisu
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-light text-decoration-none">
                                <i class="fas fa-cheese me-2 text-success"></i>
                                Cheesecake
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-light text-decoration-none">
                                <i class="fas fa-ice-cream me-2 text-success"></i>
                                Pudding
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Customer Service -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="text-success mb-3">Hỗ trợ</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a href="#" class="text-light text-decoration-none">
                                <i class="fas fa-shield-alt me-2 text-success"></i>
                                Chính sách bảo mật
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-light text-decoration-none">
                                <i class="fas fa-file-contract me-2 text-success"></i>
                                Điều khoản sử dụng
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-light text-decoration-none">
                                <i class="fas fa-question-circle me-2 text-success"></i>
                                FAQ
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-light text-decoration-none">
                                <i class="fas fa-exchange-alt me-2 text-success"></i>
                                Chính sách đổi trả
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Copyright -->
            <hr class="border-success opacity-25 my-4">
            <div class="text-center">
                <p class="mb-0 text-light-50">
                    &copy; @DateTime.Now.Year <strong class="text-success">Đồ Tráng Miệng</strong>. 
                    Tất cả quyền được bảo lưu.
                </p>
                <div class="mt-2">
                    <a href="#" class="text-success text-decoration-none me-3">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="text-success text-decoration-none me-3">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="#" class="text-success text-decoration-none me-3">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="text-success text-decoration-none">
                        <i class="fab fa-youtube"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <!-- ==========================================
         AUTH MODAL - Bootstrap Success Theme
         ========================================== -->
    <div class="modal fade" id="authModal" tabindex="-1" aria-labelledby="authModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title fw-semibold" id="authModalLabel">
                        <i class="fas fa-user-circle me-2"></i>
                        Tài khoản
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                
                <div class="modal-body p-0">
                    <!-- Nav Tabs -->
                    <ul class="nav nav-tabs nav-fill bg-light" role="tablist">
                        <li class="nav-item">
                            <button class="nav-link active text-success fw-semibold py-3 position-relative" 
                                    data-bs-toggle="tab" data-bs-target="#loginTab" type="button">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Đăng nhập
                            </button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link text-success fw-semibold py-3 position-relative" 
                                    data-bs-toggle="tab" data-bs-target="#registerTab" type="button">
                                <i class="fas fa-user-plus me-2"></i>
                                Đăng ký
                            </button>
                        </li>
                    </ul>

                    <!-- Tab Content -->
                    <div class="tab-content p-4">
                        <!-- Login Form -->
                        <div class="tab-pane fade show active" id="loginTab">
                            <form>
                                <div class="mb-3">
                                    <label class="form-label text-success fw-semibold">
                                        <i class="fas fa-envelope me-2"></i>
                                        Email
                                    </label>
                                    <input type="email" class="form-control" 
                                           placeholder="Nhập email của bạn">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-success fw-semibold">
                                        <i class="fas fa-lock me-2"></i>
                                        Mật khẩu
                                    </label>
                                    <input type="password" class="form-control" 
                                           placeholder="Nhập mật khẩu">
                                </div>
                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" id="rememberMe">
                                    <label class="form-check-label" for="rememberMe">
                                        Ghi nhớ đăng nhập
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-success w-100 fw-semibold text-uppercase">
                                    <i class="fas fa-sign-in-alt me-2"></i>
                                    Đăng nhập
                                </button>
                                <div class="text-center mt-3">
                                    <a href="#" class="text-success text-decoration-none">
                                        Quên mật khẩu?
                                    </a>
                                </div>
                            </form>
                        </div>

                        <!-- Register Form -->
                        <div class="tab-pane fade" id="registerTab">
                            <form>
                                <div class="mb-3">
                                    <label class="form-label text-success fw-semibold">
                                        <i class="fas fa-user me-2"></i>
                                        Họ và tên
                                    </label>
                                    <input type="text" class="form-control" 
                                           placeholder="Nhập họ và tên">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-success fw-semibold">
                                        <i class="fas fa-envelope me-2"></i>
                                        Email
                                    </label>
                                    <input type="email" class="form-control" 
                                           placeholder="Nhập email của bạn">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-success fw-semibold">
                                        <i class="fas fa-lock me-2"></i>
                                        Mật khẩu
                                    </label>
                                    <input type="password" class="form-control" 
                                           placeholder="Nhập mật khẩu (tối thiểu 6 ký tự)">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-success fw-semibold">
                                        <i class="fas fa-lock me-2"></i>
                                        Xác nhận mật khẩu
                                    </label>
                                    <input type="password" class="form-control" 
                                           placeholder="Nhập lại mật khẩu">
                                </div>
                                <button type="submit" class="btn btn-success w-100 fw-semibold text-uppercase">
                                    <i class="fas fa-user-plus me-2"></i>
                                    Đăng ký
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ==========================================
         JAVASCRIPT FILES
         ========================================== -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/layout.js"></script>
    <script src="~/Scripts/auth-modal.js"></script>
    <script src="~/Scripts/home-video.js"></script>
    
    @RenderSection("scripts", required: false)
</body>     
</html>
